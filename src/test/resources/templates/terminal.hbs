{{#partial "titulo"}}
Administracion de Terminales
{{/partial}}

{{#partial "principal"}}	
  <h1>ADMINISTRACION DE TERMINALES</h1>
     
    <div>
    	<form action="/terminal" method="GET">	
    	Comuna:
            <input class="passwd" type="text" id="comuna" value=0 name="comuna" placeholder="comuna" size="25" max="10">
            <input class="botonIngresar" type="submit" value="BUSCAR">
	</form>
    </div> 
	
    <br>
    <br>
	
    <div style="width:800px; margin:0 auto;">
        <h2>RESULTADOS</h2>  		 
  	 <br>
  	 <br>
  		 
  	<table class="table table-stripped" align="center">
            <tr class="row header">
               <th>Terminal</th>
               <th>Nombre</th>
               <th>Comuna</th>
               <th>Modificar</th>
               <th>Eliminar</th>
            </tr>
		
            {{#each terminales}}
            <tr class="row">
		<td>{{numeroTerminal}}</td>
		<td>{{nombre}}</td>
		<td>{{numeroComuna}}</td>
		<td>
                    <form action="/modificarTerminal" method="GET">
			<input type="hidden" name=nroTerminal value={{numeroTerminal}} >
			<input type="submit" value="M">
		</form>
		
                </td>
		<td>
		
                <form action="/bajaTerminal" method="POST">
                    <input type="hidden" name=nroTerminal value={{numeroTerminal}} >
                    <input type="submit" value="X">
		</form>
				   </td>
			  </tr>
            {{/each}}
	</table>
		 
	<div>
            <form action="/altaTerminal" method="GET">	
	  	<input class="botonIngresar" type="submit" value="ALTA TERMINAL">
            </form>
   			
 	</div>
		 
  </div>


{{/partial}}
{{>layout.hbs}}